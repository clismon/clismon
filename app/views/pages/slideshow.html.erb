<% content_for :head do %>
  <style type="text/css">
    html, body {margin:0; padding:0; width:100%; height:100%; overflow: hidden;}
    body {font-family:verdana, arial, sans-serif; font-size:76%;}
    html {background-color: <%= @background_color %>;}
    #background{position:absolute; z-index:1; width:100%; bottom: 0; }
    #placeholder {position: absolute; z-index: 20;
                  left: 50%; top: 50%;
    }
    #placeholder img {border: 3px solid white;}
  </style>

  <script type="text/javascript">
  <%= render :partial => 'clismon.js' %>

  <% @images.each do |image| %>
      $.clismon.register('<%= image['path'] %>', <%= image['width'] %>, <%= image['height'] %>);
  <% end %>

    $(function () {
      $.clismon.bg('/images/<%= @background['path'] %>', {width: <%= @background['width'] %>});
      $.clismon.start();
    });
  </script>

<% end -%>

<div id="wrap">
  <div id="placeholder">
  </div>
</div>


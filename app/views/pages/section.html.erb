<% title (@group.title) %>
<% content_for :head do %>
  <style type="text/css">
    html, body {margin:0; padding:0; width:100%; height:100%; overflow: hidden;}
    body {font-family:verdana, arial, sans-serif; font-size:76%;}
    html {background-color: <%= @group.color %>;}
    #background{position:absolute; z-index:1; top: 0; left: 0; }
    .bg-height {height: 100%;}
    .bg-width {width: 100%;}
    #placeholder {position: absolute; z-index: 20;
                  left: 50%; top: 50%;
    }
    #placeholder img {border: 3px solid white;}
  </style>

  <script type="text/javascript">

    // images
  <% @group.clips.each do |clip| %>
      $.clismon.slideshow.add('<%= clip.media.url %>', <%= clip.width %>, <%= clip.height %>);
  <% end %>

    $(function () {
      $.clismon.slideshow.bg('<%= @group.background_url %>', '<%=  @group.resize_method %>',
      {width: <%= @group.background_width %>, height: <%=  @group.background_height %> });
      $.clismon.slideshow.start();
    });
  </script>

<% end -%>

<div id="wrap">
  <div id="placeholder">
  </div>
</div>


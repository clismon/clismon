
<% layers = define_layers('/images/portada/', 2850, 1296) do |layers| %>
  <% layers.background('portada1200.jpg') %>
  <% layers.layers(%w(enlaces doplacie historietas las-buenas-noches)) %>
  <% layers.layers(%w(bueh dinero el-otro-mundo encliclopedia-universal-clismon)) %>
  <% layers.layers(%w(memorias-de-la-tierra delirios-por-encargo muvirecor)) %>
<% end %>

<% content_for :head do %>
  <style type="text/css">
    html, body {margin:0; padding:0; width:100%; height:100%; overflow: hidden;}
    html {background-color: #aac2cc;}
    .layer {position:absolute; height:100%; right: 0px;}
    #background {z-index:1;}
    <%= layers.draw_css %>
    .activearea{position: absolute; z-index: 20; border: 1px solid red; text-indent: -1000px; overflow: hidden;}
  </style>

  <script type="text/javascript">
    $(function() {
      $(".activable:first").addClass('current').show();

      $(document).click(function() {
        $('.current').hide().removeClass('current').next().addClass('current').show();
        if ($('.current').size() == 0) {
          $(".activable:first").addClass('current').show();
        }
      });
    })
  </script>

<% end -%>

<div id="wrap">
  <%= layers.draw %>
</div>

